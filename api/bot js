import fetch from 'node-fetch';

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).send("Only POST requests allowed");
  }

  const { message } = req.body;

  if (!message || !message.text) {
    return res.status(200).send("No message content");
  }

  const chatId = message.chat.id;
  const text = message.text.trim().toLowerCase();

  console.log("Received from Telegram:", text);

  if (text === "on") {
    try {
      const response = await fetch("https://your-webapp-url.vercel.app/api/live", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ command: "on", from: chatId })
      });

      const result = await response.text();
      return res.status(200).send(`Forwarded to webapp: ${result}`);
    } catch (err) {
      console.error("Forwarding failed:", err);
      return res.status(500).send("Error forwarding message");
    }
  }

  return res.status(200).send("Ignored: not 'on'");
}
